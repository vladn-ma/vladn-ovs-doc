#!/bin/sh

#----------------------------------------------------------
# OVS project
# run this script after rebuild kernel module
#----------------------------------------------------------
make -j4

sudo make install
sudo make modules_install

#remove old ovs kernel module if exists
sudo modprobe -r openvswitch

#restart ovs
sudo /usr/local/share/openvswitch/scripts/ovs-ctl restart

#run vm
#sudo kvm -m 1024 -net nic,macaddr=00:00:00:00:cc:01 -net tap,script=/etc/openvswitch/ovs-ifup,downscript=/etc/openvswitch/ovs-ifdown -drive file=/home/vladn/kvm_images/vm01.img &

#run vm
#sudo kvm -m 1024 -net nic,macaddr=00:00:00:00:cc:02 -net tap,script=/etc/openvswitch/ovs-ifup,downscript=/etc/openvswitch/ovs-ifdown -drive file=/home/vladn/kvm_images/vm02.img &




